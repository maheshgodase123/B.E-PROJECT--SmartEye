<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEE9A3"
    tools:context=".ScanNoPlate">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginStart="-2dp"
        app:srcCompat="@drawable/ellipse2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-28dp"
        app:srcCompat="@drawable/ellipse3" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Select/Capture Image To Scan"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/NoPlateimageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7EEDAD"
        android:text="Capture Image"
        android:textColor="#000000"
        app:cornerRadius="8dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NoPlateimageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7EEDAD"
        android:text="Select Image"
        android:textColor="#000000"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7EEDAD"
        android:text="Detect"
        android:textColor="#000000"
        app:cornerRadius="8dp"/>

    <EditText
        android:id="@+id/NoPlateresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="MH14JB8199"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/confirmNoPlateImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NoPlateresult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7EEDAD"
        android:text="Confirm"
        android:textColor="#000000"
        app:cornerRadius="8dp"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="105dp"
        android:layout_height="237dp"
        android:layout_below="@+id/text1"
        android:layout_alignEnd="@+id/text1"
        android:layout_alignBottom="@+id/NoPlateimageView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-54dp"
        android:layout_marginBottom="-16dp"
        android:layout_toEndOf="@id/NoPlateimageView"
        android:src="@drawable/character4" />


</RelativeLayout>