<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEE9A3"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="80dp"
        app:srcCompat="@drawable/ellipse2" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-40dp"
        app:srcCompat="@drawable/ellipse3" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="271dp"
        app:srcCompat="@drawable/ellipse4" />

    <EditText
        android:id="@+id/username"
        android:layout_width="381dp"
        android:layout_height="66dp"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-240dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:ellipsize="start"
        android:hint="Username"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="380dp"
        android:layout_height="66dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="20dp"
        android:ellipsize="start"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#7EEDAD"
        android:text="LOGIN"
        android:textColor="@color/black"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/others"
        android:layout_width="298dp"
        android:layout_height="44dp"
        android:layout_below="@id/loginbtn"
        android:layout_marginStart="55dp"
        android:layout_marginTop="80dp"
        android:onClick="openScanningActivity"
        android:text="Are you an Operator? Click Here"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        app:srcCompat="@drawable/emailicon" />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/lockicon" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="SMART EYE "
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

