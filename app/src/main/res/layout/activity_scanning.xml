<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FEE9A3"
    tools:context=".activity_scanning"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/frame"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#FFFF">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/imageFilterView"
            android:layout_width="118dp"
            android:layout_height="112dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="7dp"
            android:foregroundGravity="center_horizontal"
            app:srcCompat="@drawable/smart_eye_latest_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageFilterView"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="77dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="The Vehicle Surveillance System"
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#7EEDAD"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FEE9A3"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/face" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageButton8"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-black"
                    android:text="FACE SCAN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#7EEDAD"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#FEE9A3"
                    android:cropToPadding="true"
                    app:srcCompat="@drawable/noplate7" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageButton"
                    android:layout_alignLeft="@id/imageButton"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-black"
                    android:text="NO. PLATE SCAN"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Person Name"
        android:textColor="#010101"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Number Plate"
        android:textColor="#010101"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:textSize="24dp" />


    <Spinner
        android:id="@+id/VeihicleStatus"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="157dp"
        android:layout_marginTop="25dp"
        android:spinnerMode="dropdown"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Button
        android:id="@+id/saveToDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VeihicleStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="#7EEDAD"
        app:cornerRadius="8dp"
        android:text="Submit"
        android:textColor="#000000" />

</RelativeLayout>