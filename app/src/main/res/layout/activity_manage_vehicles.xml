<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manageVehicles">

    <EditText
        android:id="@+id/AddNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:hint="Vehicle No To Add/Delete" />

    <Button
        android:id="@+id/AddNoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add To Database" />

    <Button
        android:id="@+id/DeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddNoBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Delete From Database" />

    <Button
        android:id="@+id/noplateDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DeleteBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:text="Show Vehicles" />

</RelativeLayout>